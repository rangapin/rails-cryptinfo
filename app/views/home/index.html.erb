
<br>
<table class="table table-sm table table-striped table-bordered table-hover">
  <thead class="thead-light">
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Price</th>
      <th scope="col">24H High</th>
      <th scope="col">24H low</th>
      <th scope="col">Market Cap</th>
    </tr>
  </thead>
  <tbody>
    <% @prices["DISPLAY"].each do|key, value| %>
    <tr>
      <td><%= key %></td>
      <td><%= value["USD"]["PRICE"] %></td>
      <td><%= value["USD"]["HIGHDAY"] %></td>
      <td><%= value["USD"]["LOWDAY"] %></td>
      <td><%= value["USD"]["MKTCAP"] %></td>
    </tr>
    <% end %>

  </tbody>
</table>

<% @news["Data"] %>
<div class="container">
  <div class="row">
    <% for x in @news["Data"] %>
    <div class="col-sm">
      <div class="card" style="width: 18rem;">
        <img src="<%= x["imageurl"] %>" class="card-img-top" alt="source">
        <div class="card-body">
          <h5 class="card-title"><%= x["title"] %></h5>
          <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
          <a href="<%= x["url"] %>" class="btn btn-secondary">Go somewhere</a>
        </div>
      </div>
      <br/>
    </div>
    <% end %>
  </div>
</div>


